<body class="bg-dark">
    <div class="container book-list">
        <div class="row justify-content-center">
            <div class="col-5">
                <h2 class="text-center text-white">LOGIN</h2>
                <div class="form-content p-3 mt-3" style="border-radius: 10px; background-color: rgba(225 ,225 ,225 ,0.4 );">
                    <form action="/local" method="post" class="mb-3">
                        <input type="text" class="form-control border border-0" name="username" placeholder="Name"
                            style="background-color: rgba(225 ,225 ,225 ,0.8 );">
                        <input type="text" class="form-control border border-0 mt-3" name="password"
                            placeholder="Password" style="background-color: rgba(225 ,225 ,225 ,0.8 );">
                        <input type="submit" value="LOGIN" class="mt-3 form-control bg-success text-white">
                        <div class="login-cont mt-3">
                            <label for="" class="fw-semibold">Don't have an account?</label>
                            <a href="/signin" style="text-decoration: none; color: aqua;" class="fw-semibold">SIGN IN</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
